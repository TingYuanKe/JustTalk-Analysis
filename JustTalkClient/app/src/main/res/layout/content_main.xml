<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tingyuan.justtalkclient.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <ToggleButton
        android:id="@+id/btn_record"

        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textOff="Start recording"
        android:textOn="Click to end"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="538dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="Timestamp(sec):"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/txv_timestampValue"
        android:layout_width="17dp"
        android:layout_height="24dp"
        android:text="20"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="327dp"
        android:layout_height="27dp"
        android:text="Log:"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/txv_log"
        android:layout_width="350dp"
        android:layout_height="326dp"
        android:text=" "
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="135dp" />

    <SeekBar
        android:id="@+id/skb_timestamp"

        android:layout_width="331dp"
        android:layout_height="0dp"
        android:max="30"
        android:min="10"
        android:progress="5"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="93dp" />


</android.support.constraint.ConstraintLayout>
